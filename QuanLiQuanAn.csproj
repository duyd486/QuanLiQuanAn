    <None Remove="Assets\Icons\SearchIcon.png" />
    <None Remove="Assets\Images\Avatar.png" />
    <None Remove="Assets\Images\Background.png" />
    <None Remove="Assets\Images\EmployeePic.png" />
    <None Remove="Assets\Images\Logo.png" />
    <None Remove="Assets\Images\RoundAvatar.png" />
    <None Remove="Assets\Images\Table.png" />
    <None Remove="Assets\Images\User.png" />
