    <Resource Include="Assets\Icons\DashboardIcon.png" />
    <Resource Include="Assets\Icons\SearchIcon.png" />
    <Resource Include="Assets\Images\Avatar.png" />
    <Resource Include="Assets\Images\Background.png" />
    <Resource Include="Assets\Images\EmployeePic.png" />
    <Resource Include="Assets\Images\Logo.png" />
    <Resource Include="Assets\Images\RoundAvatar.png" />
