<UserControl x:Class="QuanLiQuanAn.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:QuanLiQuanAn.Views"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1333">
    <ScrollViewer>
        <Grid Height="2700" Margin="0 -1800 0 0" Background="#FFEDDB">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="20" Grid.Row="0" Background="#BC4C33" Margin="30 30 30 -10" Padding="10">
                    <Border.Effect>
                        <DropShadowEffect Direction="270" Opacity="0.25" BlurRadius="4"/>
                    </Border.Effect>
                    <Grid Background="#BC4C33">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="198,0,0,0" Grid.Column="0" FontFamily="{StaticResource Montserrat}" FontWeight="Bold" FontSize="40" Foreground="#F5EFDF" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Welcome Manager!" Width="544" Grid.ColumnSpan="2"/>
                            <Image Source="/Assets/Images/RoundAvatar.png" Margin="50,20,0,20" HorizontalAlignment="Left" Grid.Column="1" RenderTransformOrigin="0.879,0.556" />
                        </Grid>
                    </Grid>
                </Border>
                <Grid Grid.Row="1" Margin="20 20 20 0">
                    <Grid.Resources>
                        <Style TargetType="Border">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="CornerRadius" Value="16"/>
                            <Setter Property="Background" Value="#BC4C33"/>
                            <Setter Property="Margin" Value="20 20 20 20"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Direction="270" Opacity="0.25" BlurRadius="4"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#F5EFDF"/>
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontFamily" Value="{StaticResource Montserrat}"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Last Month" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="28" Foreground="#42150D" FontWeight="Bold" Margin="20 4 20 0"/>
                    <Border Grid.Column="0" Margin="10 44 20 20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="1.5*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="" FontFamily="{StaticResource FontAwesome}" FontSize="52" HorizontalAlignment="Left" Margin="30 12 0 0"/>
                            <TextBlock Grid.Row="1" Margin="16 10 10 10" Text="Salary Outcome: " FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Margin="16 10 10 10" Text="{Binding SalaryOutcome}" FontSize="40" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1" Margin="10 44 10 20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="1.5*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="" FontFamily="{StaticResource FontAwesome}" FontSize="52" HorizontalAlignment="Left" Margin="30 12 0 0"/>
                            <TextBlock Grid.Row="1" Margin="16 10 10 10" Text="Ingredient Outcome: " FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Margin="16 10 10 10" Text="{Binding IngredientOutcome}" FontSize="40" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                        </Grid>
                    </Border>
                    <Border Grid.Column="2" Margin="20 44 10 20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="1.5*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="" FontFamily="{StaticResource FontAwesome}" FontSize="52" HorizontalAlignment="Left" Margin="30 12 0 0"/>
                            <TextBlock Grid.Row="1" Margin="16 10 10 10" Text="Total Employee: " FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Margin="16 10 10 10" Text="{Binding TotalEmployee}" FontSize="40" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                        </Grid>
                    </Border>
                    <Border Grid.Column="3" Margin="20 44 10 20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="1.5*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="" FontFamily="{StaticResource FontAwesome}" FontSize="52" HorizontalAlignment="Left" Margin="30 12 0 0"/>
                            <TextBlock Grid.Row="1" Margin="16 10 10 10" Text="Total Outcome: " FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Margin="16 10 10 10" Text="{Binding TotalOutcome}" FontSize="40" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" Background="#F4D4C1" Margin="30 20 30 30" CornerRadius="16" BorderThickness="0" BorderBrush="Gray">
                        <Border.Effect>
                            <DropShadowEffect Direction="270" Opacity="0.25" BlurRadius="4"/>
                        </Border.Effect>
                        <lvc:CartesianChart Margin="30 90 30 30">
                            <lvc:CartesianChart.Series>
                                <lvc:LineSeries Values="{Binding SalaryLineChartValue}" 
                                               Title="Salary"
                                               StrokeThickness="4" 
                                               StrokeDashArray="2" 
                                               Stroke="#B22C23" 
                                               Fill="Transparent" 
                                               LineSmoothness="0" 
                                               PointGeometry="{x:Null}" />
                                <lvc:LineSeries Values="{Binding IngredientLineChartValue}" 
                                               Title="Ingredient"
                                               StrokeThickness="2" 
                                               Stroke="#B22C23" 
                                               Fill="Transparent" 
                                               LineSmoothness="1" 
                                               PointGeometrySize="15" />
                            </lvc:CartesianChart.Series>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis IsMerged="True">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="1" StrokeDashArray="2">
                                            <lvc:Separator.Stroke>
                                                <SolidColorBrush Color="Transparent" />
                                            </lvc:Separator.Stroke>
                                        </lvc:Separator>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis IsMerged="True">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="1.5" StrokeDashArray="4">
                                            <lvc:Separator.Stroke>
                                                <SolidColorBrush Color="#404F56" />
                                            </lvc:Separator.Stroke>
                                        </lvc:Separator>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Border>
                    <Border Grid.Column="1" Background="#B23D23" Height="78" VerticalAlignment="Top" Margin="30 20 30 30" CornerRadius="16 16 1 1">
                        <TextBlock Text="Last Year Outcome Dashboard" VerticalAlignment="Center" Margin="30 0 0 0" FontSize="28" FontFamily="{StaticResource Montserrat}" Foreground="#FFEDDB"/>
                    </Border>

                    <Border Grid.Column="0">
                        <lvc:PieChart Grid.Column="0" 
                                      LegendLocation="Bottom" 
                                      Margin="30 30 20 30" DataTooltip="{x:Null}" 
                                      InnerRadius="90" Series="{Binding PieSeriesCollection}">
                        </lvc:PieChart>
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="#F4D4C1" Margin="30 20 30 30" CornerRadius="16" BorderThickness="1" BorderBrush="Gray">
                    <Border.Effect>
                        <DropShadowEffect Direction="270" Opacity="0.25" BlurRadius="4"/>
                    </Border.Effect>
                    <lvc:CartesianChart Series="{Binding ColSeriesCollection}" LegendLocation="Bottom" Margin="30 90 30 30">
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Sold Apps" Labels="{Binding Labels}"></lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                        <lvc:CartesianChart.DataTooltip>
                            <lvc:DefaultTooltip SelectionMode="SharedYValues"></lvc:DefaultTooltip>
                        </lvc:CartesianChart.DataTooltip>
                    </lvc:CartesianChart>
                </Border>
                <Border Grid.Column="0" Background="#B23D23" Height="78" VerticalAlignment="Top" Margin="30 20 30 30" CornerRadius="16 16 1 1">
                    <TextBlock Text="This Year Income Food" VerticalAlignment="Center" Margin="30 0 0 0" FontSize="28" FontFamily="{StaticResource Montserrat}" Foreground="#FFEDDB"/>
                </Border>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#F4D4C1" Margin="30 20 30 30" CornerRadius="16" BorderThickness="1" BorderBrush="Gray">
                        <Border.Effect>
                            <DropShadowEffect Direction="270" Opacity="0.25" BlurRadius="4"/>
                        </Border.Effect>

                    </Border>
                    <Border Grid.Row="0" Background="#B23D23" Height="78" VerticalAlignment="Top" Margin="30 20 30 30" CornerRadius="16 16 1 1">
                        <TextBlock Text="Bad Rates" VerticalAlignment="Center" Margin="30 0 0 0" FontSize="28" FontFamily="{StaticResource Montserrat}" Foreground="#FFEDDB"/>
                    </Border>


                    <Border Grid.Row="1" Background="#F4D4C1" Margin="30 20 30 30" CornerRadius="16" BorderThickness="1" BorderBrush="Gray">
                        <Border.Effect>
                            <DropShadowEffect Direction="270" Opacity="0.25" BlurRadius="4"/>
                        </Border.Effect>
                        <ScrollViewer Grid.Row="1" Background="#F5D5C2">
                            <ItemsControl Name="item" ItemsSource="{Binding EmployeeTmp.SalaryBills}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border 
                                            Background="#FFEDDB"
                                            Height="48"
                                            Margin="10 12 10 0"
                                            CornerRadius="18"
                                            >
                                            <Grid>
                                                <Grid.Resources>
                                                    <ResourceDictionary>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontSize" Value="24"/>
                                                            <Setter Property="FontFamily" Value="{StaticResource Montserrat}"/>
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="Foreground" Value="#42150D"/>
                                                        </Style>
                                                    </ResourceDictionary>
                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="9*"/>
                                                    <ColumnDefinition Width="46*"/>
                                                    <ColumnDefinition Width="28*"/>
                                                    <ColumnDefinition Width="48*"/>
                                                    <ColumnDefinition Width="38*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Id}" Grid.Column="0"/>
                                                <TextBlock Text="{Binding Time}" Grid.Column="1"/>
                                                <TextBlock Text="{Binding TotalShifts}" Grid.Column="2"/>
                                                <TextBlock Grid.Column="3">
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource TotalSalaryConverter}">
                                                            <Binding Path="TotalShifts"/>
                                                            <Binding Path="Employee.Salary"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    <Border Grid.Row="1" Background="#B23D23" Height="78" VerticalAlignment="Top" Margin="30 20 30 30" CornerRadius="16 16 1 1">
                        <TextBlock Text="Good Rates" VerticalAlignment="Center" Margin="30 0 0 0" FontSize="28" FontFamily="{StaticResource Montserrat}" Foreground="#FFEDDB"/>
                    </Border>
                </Grid>
                
                
            </Grid>
            
        </Grid>
    </ScrollViewer>
</UserControl>
