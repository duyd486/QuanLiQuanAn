<Window x:Class="QuanLiQuanAn.Views.CustomerInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLiQuanAn.Views"
        mc:Ignorable="d"
        Title="CustomerInfoView" Height="900" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Margin" Value="20 12 0 0"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="20 48 20 0"/>
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>

            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="40" Text="Customer Information"/>

        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Full Name"/>
                <TextBox Grid.Column="0" Margin="20 48 0 0" Text="{Binding InformationTmp.Name, Mode=TwoWay}"/>
                <TextBlock Grid.Column="1" Text="Birth"/>
                <DatePicker Grid.Column="1"  Text="{Binding InformationTmp.Birth, Mode=OneTime, UpdateSourceTrigger=PropertyChanged}" SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="20" VerticalContentAlignment="Center" Margin="20 48 20 0"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock Grid.Column="0" Text="Phone"/>
            <TextBox Text="{Binding InformationTmp.Phone}"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Address"/>
                <ComboBox Grid.Column="0" Margin="20 48 20 0" FontSize="24" VerticalContentAlignment="Center" ItemsSource="{Binding City}" SelectedItem="{Binding InformationTmp.Address, Mode=TwoWay}"/>
                <TextBlock Grid.Column="1" Text="Gender"/>
                <ComboBox Grid.Column="1" Margin="20 48 20 0" FontSize="24" VerticalContentAlignment="Center" ItemsSource="{Binding Gender}" SelectedItem="{Binding InformationTmp.Gender, Mode=TwoWay}" SelectedValue="{Binding InformationTmp.Gender, Mode=TwoWay}"/>
                <TextBlock Grid.Column="2" Text="Status"/>
                <ComboBox Grid.Column="2" Margin="20 48 20 0" FontSize="24" VerticalContentAlignment="Center" SelectedIndex="{Binding EmployeeTmp.Status}">
                    <ComboBoxItem Height="0"></ComboBoxItem>
                    <ComboBoxItem>Dừng hoạt động</ComboBoxItem>
                    <ComboBoxItem>Đang hoạt động</ComboBoxItem>
                </ComboBox>
            </Grid>
        </Grid>

        <Grid Grid.Row="4">
            <TextBlock Grid.Column="2" Text="Citizen Id"/>
            <TextBox Text="{Binding InformationTmp.CitizenId}"/>
        </Grid>

        <Grid Grid.Row="5">
            
        </Grid>

        <ScrollViewer Grid.Row="6" Margin="20">

        </ScrollViewer>

        <Grid Grid.Row="7">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#BC4C33"/>
                    <Setter Property="Margin" Value="10 24 20 24"/>
                    <Setter Property="Foreground" Value="#F5EFDF"/>
                    <Setter Property="FontFamily" Value="{StaticResource Montserrat}"/>
                    <Setter Property="FontSize" Value="24"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="2" Content="Apply" IsCancel="True"/>
        </Grid>
    </Grid>
</Window>
